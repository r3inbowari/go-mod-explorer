{
  "name": "gomodexplorer",
  "displayName": "Go Mod Explorer",
  "description": "Displays the external libraries for the current go project in the Explorer.",
  "publisher": "r3inbowari",
  "version": "0.3.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/r3inbowari/go-mod-explorer.git"
  },
  "icon": "favicon.ico",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:*.go",
    "workspaceContains:*/*.go",
    "workspaceContains:*/*/*.go",
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gomod.openResource",
        "title": "Open Resource"
      },
      {
        "command": "gomod.openInFileExplorer",
        "title": "Reveal in File Explorer"
      },
      {
        "command": "gomod.findInFiles",
        "title": "Find in Files",
        "icon": "$(remote-explorer-documentation)"
      },
      {
        "command": "gomod.focus",
        "title": "Focus"
      },
      {
        "command": "gomod.collapse",
        "title": "Collapse Folder in Explorer",
        "icon": "$(collapse-all)"
      },
      {
        "command": "gomod.blur",
        "title": "Blur"
      },
      {
        "command": "gomod.openGoModFile",
        "title": "Open go.mod File",
        "icon": "$(preferences-open-settings)"
      },
      {
        "command": "gomod.execGoModTidy",
        "title": "Tidy (beta)",
        "icon": "$(sort-precedence)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "gomod",
          "name": "GoMod Explorer",
          "icon": "resources/package.svg",
          "contextualTitle": "GoMod Explorer",
          "when": "go.showExplorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gomod.collapse",
          "group": "navigation",
          "when": "view == gomod"
        }
      ],
      "view/item/context": [
        {
          "command": "gomod.openInFileExplorer",
          "when": "view == gomod && viewItem != modules"
        },
        {
          "command": "gomod.openGoModFile",
          "when": "view == gomod && viewItem == modules",
          "group": "inline"
        },
        {
          "command": "gomod.execGoModTidy",
          "when": "view == gomod && viewItem == modules",
          "group": "inline"
        },
        {
          "command": "gomod.findInFiles",
          "when": "view == gomod && viewItem == package",
          "group": "inline"
        },
        {
          "command": "gomod.findInFiles",
          "when": "view == gomod && viewItem == directory",
          "group": "inline"
        },
        {
          "command": "gomod.findInFiles",
          "when": "view == gomod && viewItem == gosdk",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "gomod.focus",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'",
        "when": "focusedView != gomod"
      },
      {
        "command": "gomod.blur",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'",
        "when": "focusedView == gomod"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Go Mod Explorer",
      "properties": {
        "gomod.revealEnable": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic Revael in Go Mod Explorer"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "open-file-explorer": "^1.0.2"
  }
}
