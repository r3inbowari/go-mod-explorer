{
  "name": "gomodexplorer",
  "displayName": "Go Mod Explorer",
  "description": "Displays the External Library for the current go project in the Explorer.",
  "publisher": "r3inbowari",
  "version": "0.2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/r3inbowari/go-mod-explorer.git"
  },
  "icon": "favicon.ico",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:go.mod"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gomod.openResource",
        "title": "Open Resource"
      },
      {
        "command": "gomod.openByFileExplorer",
        "title": "Reveal in File Explorer"
      },
      {
        "command": "gomod.findInFiles",
        "title": "Find in Files"
      },
      {
        "command": "gomod.expandPackageDetail",
        "title": "Show/Hide Hostname and version",
        "icon": "$(notebook-render-output)"
      },
      {
        "command": "gomod.focus",
        "title": "Focus and search",
        "icon": "$(search-view-icon)"
      },
      {
        "command": "gomod.blur",
        "title": "Blur"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "gomod",
          "name": "GoMod Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gomod.expandPackageDetail",
          "group": "navigation",
          "when": "view == gomod"
        },
        {
          "command": "gomod.focus",
          "group": "navigation",
          "when": "view == gomod"
        }
      ],
      "view/item/context": [
        {
          "command": "gomod.openByFileExplorer",
          "when": "view == gomod"
        },
        {
          "command": "gomod.findInFiles",
          "when": "view == gomod"
        }
      ]
    },
    "keybindings": [
      {
        "command": "gomod.focus",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'",
        "when": "focusedView != gomod"
      },
      {
        "command": "gomod.blur",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'",
        "when": "focusedView == gomod"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "open-file-explorer": "^1.0.2"
  }
}
